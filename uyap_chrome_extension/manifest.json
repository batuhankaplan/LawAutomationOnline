{
  "manifest_version": 3,
  "name": "UYAP Avukat Dosya Aktar覺c覺",
  "version": "1.0.0",
  "description": "UYAP Avukat Bilgi Sistemi'nden dosyalar覺 otomatik olarak kendi sisteminize aktar覺r",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "https://vatandas.uyap.gov.tr/*",
    "https://avukat.uyap.gov.tr/*",
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://vatandas.uyap.gov.tr/*",
        "https://avukat.uyap.gov.tr/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["config.js", "mapper.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
